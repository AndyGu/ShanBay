<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@id/btn_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="@dimen/height23"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin10"
                android:src="@drawable/icon_choice_experience"
                android:visibility="invisible" />

            <RadioButton
                android:id="@id/button1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/height23"
                android:background="@drawable/bg_experience_cate"
                android:button="@null"
                android:gravity="center"
                android:paddingLeft="@dimen/padding5"
                android:textColor="@android:color/white"
                android:textSize="@dimen/exp_radio_text" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="@dimen/height23"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin10"
                android:src="@drawable/icon_choice_experience"
                android:visibility="invisible" />

            <RadioButton
                android:id="@id/button2"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/height23"
                android:background="@drawable/bg_experience_cate"
                android:button="@null"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/exp_radio_text" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@id/dash_line_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@drawable/dash_line_green" />

    <ImageView
        android:id="@id/dash_line_vertical"
        android:layout_width="@dimen/width20"
        android:layout_height="@dimen/height16"
        android:layout_centerInParent="true"
        android:src="@drawable/dash_line_green_vertical" />

</RelativeLayout>